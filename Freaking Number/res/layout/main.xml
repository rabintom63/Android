<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="end"
    android:background="#ccc"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/progressbar"
        android:layout_width="fill_parent"
        android:layout_height="7dp"
        android:contentDescription="@string/abc" />

    <TextView
        android:id="@+id/highscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/progressbar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/number"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="30dp" >

        <ImageView
            android:id="@+id/first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:src="@drawable/n1"
            android:contentDescription="@string/abc" />

        <ImageView
            android:id="@+id/operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus"            
            android:textColor="#fff"
            android:contentDescription="@string/abc"
            android:textSize="100sp" />

        <ImageView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"  
            android:contentDescription="@string/abc"
            android:paddingRight="30dp"          
            android:src="@drawable/n1"
            android:textColor="#fff"            
            android:textSize="100sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/abc"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:src="@drawable/equals"
            android:textColor="#fff"
            android:textSize="100sp" />

        <ImageView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/abc"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/n2"
            android:textColor="#fff"
            android:textSize="100sp" />

    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/true_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/abc"
            android:background="@drawable/right" />

        <ImageButton
            android:id="@+id/false_btn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/abc"
            android:background="@drawable/wrong" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical" >

        <com.google.android.gms.ads.AdView 
	   		xmlns:ads="http://schemas.android.com/apk/res-auto"
	        android:id="@+id/AdMob" 
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content" 
	        ads:adSize="BANNER"        
	        ads:adUnitId="ca-app-pub-5757354627664623/5493693793"  />

    </LinearLayout>
    
</RelativeLayout>

