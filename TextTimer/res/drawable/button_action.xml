<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:state_pressed="true" >
	    <layer-list >
	        <item android:top="@dimen/shadow_width">
	            <shape xmlns:android="http://schemas.android.com/apk/res/android" 
				    android:shape="rectangle"  >
				    <corners android:radius="@dimen/rounded_corner" />
				    <solid android:color="@color/button_shadow_color"/>
				    <padding android:top="@dimen/shadow_width"/>  
				</shape>
	        </item>               
	    </layer-list>
	 </item>
	<item>
	    <layer-list >
	        <item android:drawable="@drawable/button_rounded" >
	        </item>
	        <item android:bottom="@dimen/shadow_width">
	            <shape xmlns:android="http://schemas.android.com/apk/res/android" 
				    android:shape="rectangle"  >
				    <corners android:radius="@dimen/rounded_corner" />
				    <solid android:color="@color/button_fg_color"/>
				</shape>
	        </item>             
	    </layer-list>
	 </item>
</selector>
