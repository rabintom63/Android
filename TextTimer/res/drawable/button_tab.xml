<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:state_pressed="true" >
	    <layer-list >
	        <item > 
	            <shape >
	                <solid android:color="@color/tab_bar_shadow_color"/>
	                <padding 
				        android:left="@dimen/title_bar_padding"
				        android:right="@dimen/title_bar_padding"
				        android:top="@dimen/title_bar_padding"
				        android:bottom="@dimen/title_bar_padding" />
	            </shape>
	        </item>
	    </layer-list>
	 </item>
	 <item android:state_activated="true" >
	    <layer-list >
	        <item > 
	            <shape >
	                <solid android:color="@color/selected_tab_bar_label_color"/>
	            </shape>
	        </item>
	        <item android:bottom="2dp">
	            <shape xmlns:android="http://schemas.android.com/apk/res/android" 
				    android:shape="rectangle"  >
				    <solid android:color="@color/tab_bar_color"/>
				    <padding 
				        android:left="@dimen/title_bar_padding"
				        android:right="@dimen/title_bar_padding"
				        android:top="@dimen/title_bar_padding"
				        android:bottom="@dimen/title_bar_padding" />
				</shape>
	        </item>             
	    </layer-list>
	 </item>
	<item>
	    <layer-list >
	        <item > 
	            <shape >
	                <solid android:color="@color/tab_bar_shadow_color"/>
	            </shape>
	        </item>
	        <item android:bottom="1dp">
	            <shape xmlns:android="http://schemas.android.com/apk/res/android" 
				    android:shape="rectangle"  >
				    <solid android:color="@color/tab_bar_color"/>
				    <padding 
				        android:left="@dimen/title_bar_padding"
				        android:right="@dimen/title_bar_padding"
				        android:top="@dimen/title_bar_padding"
				        android:bottom="@dimen/title_bar_padding" />
				</shape>
	        </item>             
	    </layer-list>
	 </item>
</selector>
