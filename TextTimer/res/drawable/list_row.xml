<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:state_pressed="true" >
	    <color android:color="@color/pressed_row_background_color"/>
	 </item>
	<item>
	    <layer-list >
	        <item > 
	            <shape >
	                <solid android:color="@color/pressed_row_background_color"/>
	            </shape>
	        </item>
	        <item android:bottom="@dimen/row_divider_width">
	            <shape xmlns:android="http://schemas.android.com/apk/res/android" 
				    android:shape="rectangle"  >
				    <solid android:color="@color/row_background_color"/>
				</shape>
	        </item>             
	    </layer-list>
	 </item>
</selector>
