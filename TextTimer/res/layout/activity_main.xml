<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.abma.texttimer.MainActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bar"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/button_menu"
            android:drawableLeft="@drawable/icon_menu"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingBottom="@dimen/title_bar_padding"
            android:paddingLeft="@dimen/rounded_corner_padding"
            android:paddingRight="@dimen/rounded_corner_padding"
            android:paddingTop="@dimen/title_bar_padding" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_menu"
            android:drawableLeft="@drawable/icon_back"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingBottom="@dimen/title_bar_padding"
            android:paddingLeft="@dimen/rounded_corner_padding"
            android:paddingRight="@dimen/rounded_corner_padding"
            android:paddingTop="@dimen/title_bar_padding" />

        <TextView
            android:id="@+id/tvEstimatingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Text Timer"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_bar_font_size" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>

