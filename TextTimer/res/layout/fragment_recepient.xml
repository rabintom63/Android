<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/recepient_item_padding"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
	    
        <ImageView
	        android:id="@+id/ivRecepientAvatar"
	        android:layout_width="@dimen/avatar_width_height"
	        android:layout_height="@dimen/avatar_width_height"
	        android:src="@drawable/avatar" />
	
	    <TextView
	        android:id="@+id/tvRecepientName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="@dimen/recepient_item_padding"
	        android:maxLines="1"
	        android:text="TextView"
	        android:textSize="@dimen/title_bar_font_size" />
	    
    </LinearLayout>

    <ListView
        android:id="@+id/lvPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>
    
</LinearLayout>
